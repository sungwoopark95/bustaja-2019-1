              <td class="timeTableCellDay">화</td>
              <td class="timeTableCellDay">수</td>
              <td class="timeTableCellDay">목</td>
              <td class="timeTableCellDay">금</td>
              <td class="timeTableCellDay">토</td>
              <td class="timeTableCellDay">일</td>
            </tr>


            <tr id='line1'>
              <td class="timeTableCellTime">9:00</td>
              <% Timeslot.all[0,7].each do |timeslot| %>
                <td><label class="contain_timeslot"><%= check_box_tag "user[timeslot_ids][]", timeslot.id, @user.timeslot_ids.include?(timeslot.id) %><div class="checkmark" id="color_1"></div></label></td>
